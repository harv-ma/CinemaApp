%h1 Listing bookings

%table
  %thead
    %tr
      %th
      %th
      %th
      %th
      %th
      %th

  %tbody
    - @bookings.each do |booking|
      %tr
        %td= booking.id 
        %td= booking.user.forename
        %td= booking.user.surname
        %td= booking.showing.film.title
        %td= link_to 'Show', booking
        %td= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }


