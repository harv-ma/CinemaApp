%div{'class' => 'container'}
  %div{'class' => 'row'}
    %div{'class' => 'col-5'}
      - if @film.poster.attached?
        %img{:src => "#{url_for(@film.poster)}"}
      - else
        %p "No image available"
    %div{'class' => 'col-7'}
      %h1= @film.title
      %div{'class' => 'row mt-2'}
        %div{'class' => 'col-12'}
          %p= @film.synopsis
          %h5= "Duration: #{@film.duration}hours"
          %h5= "Rating #{@film.rating}"
          %h5= "Language #{@film.language}"
          %h5= "Release Date  #{@film.release_date}"
      %div{'class' => 'row mt-2'}
        %div{'class' => 'col-12'}
          %h3{'class' => 'text-center mt-3 mb-4'}= "Book a seat now:"
          %div{'class' => 'd-flex flex-column'}
            - @test = Showing.where(film: @film)
            - @test.each do |showing|
              %div{'class' => 'container'}
                %div{'class' => 'row'}
                  %p{'class' => 'col-10'}= "#{showing.startTime.strftime('%m/%d/%Y')} #{showing.startTime.strftime('%I:%M%p')}"
                  %p{'class' => 'col-2'}= link_to 'View', showing, class: 'btn btn-primary'


        
    = link_to 'Edit', edit_film_path(@film), class: 'btn btn-primary'
    = link_to 'Back', films_path, class: 'btn btn-primary'
