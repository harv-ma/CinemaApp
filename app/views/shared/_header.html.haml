%header
    %div{'class' => 'main-header'}
        %nav{'class' => 'navbar navbar-expand-sm'}
            %a{'class' => 'navbar-brand', 'href' => '/'}= t('app_title')
            %div{'class' => 'collapse navbar-collapse', 'id' => 'navbarNav'}
                %ul{'class' => 'navbar-nav'}
                    %li{'class' => "nav-item #{active_class('/')}"}
                        %a{'class' => 'nav-link ', 'href' => '/'}Home
                    %li{'class' => "nav-item #{active_class('/showings')}"}
                        %a{'class' => 'nav-link', 'href' => '/showings'}Showings
                    %li{'class' => "nav-item #{active_class('/films')}"}
                        %a{'class' => 'nav-link', 'href' => '/films'}Films
                    %li{'class' => "nav-item #{active_class('/contact')}"}
                        %a{'class' => 'nav-link', 'href' => '/contact'}Contact Us
            %ul{'class' => 'navbar-nav float-right nav-two'}
                - if user_signed_in?
                    %li{'class' => 'nav-item'}
                        - if current_user.admin?
                            %p{'class' => 'navbar-text mr-0'}
                                = "Hi #{current_user.forename}"
                                %sup{'class' => 'bg-danger p-1 rounded text-white'} Admin
                                
                                
                        - else
                            %p{'class' => 'navbar-text mr-0'}
                                = "Hi #{current_user.forename}"
                                %sup{'class' => 'bg-success p-1 rounded text-white'} User
                            
                        
                    %li{'class' => 'nav-item ml-2'}
                        %p{'class' => 'profile-button'}= link_to 'Profile', '/users/show'
                - else
                    %li{'class' => 'nav-item'}
                        = link_to 'Login', new_user_session_path, class: "btn btn-outline-primary"
                    %li{'class' => 'nav-item ml-2'}
                        = link_to 'Sign up', new_user_registration_path, class: "btn btn-outline-primary"