= @showing['id']
= form_for @showing do |f|
  - if @showing.errors.any?
    #error_explanation
      %h2= "#{pluralize(@showing.errors.count, "error")} prohibited this showing from being saved:"
      %ul
        - @showing.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :startTime
    = f.datetime_select :startTime
  .field
    = f.label :film
    = f.collection_select(:film_id, Film.all, :id, :title)
  .field
    = f.label :room
    = f.collection_select(:room_id, Film.all, :id, :id)
  .actions
    = f.submit 'Save'
