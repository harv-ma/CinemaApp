%div{'class' => 'container'}
  %table{'class' => 'table table-hover mt-3 table-custom-showings'}
    %thead{'class' => 'thead-dark'}
      %tr{'class' => 'd-flex'}
        %th{'class' => 'col-3'} ID
        %th{'class' => 'col-2'} Start Time
        %th{'class' => 'col-1'} Room
        %th{'class' => 'col-1'}
        %th{'class' => 'col-1'}
        %th{'class' => 'col-1'}

    %tbody
      - @showings.each do |showing|
        %tr{'class' => 'd-flex'}
          %th{'class' => 'col-3', 'scope' => 'row'}= showing.id
          %td{'class' => 'col-2'}= "#{showing.startTime.strftime('%m/%d/%Y')} #{showing.startTime.strftime('%I:%M%p')}"
          %td{'class' => 'col-1'}= link_to 'View', showing, class: 'btn btn-primary'

