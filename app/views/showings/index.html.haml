%h1 Listing showings

%table
  %thead
    %tr
      %th ID
      %th Start Time
      %th Film
      %th Room
      %th
      %th
      %th

  %tbody
    - @showings.each do |showing|
      %tr
        %td= showing.id
        %td= showing.film['title']
        %td= showing.startTime
        %td= showing.room['id']
        %td= link_to 'View', showing
        %td= link_to 'Edit', edit_showing_path(showing)
        %td= link_to 'Delete', showing, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Showing', new_showing_path
